      Dropdown
      %i.dropdown.icon
      .menu
        %a.item{:href => "#"} Link Item
        %a.item{:href => "#"} Link Item
        .divider
        .header Header Item
        .item
          %i.dropdown.icon
          Sub Menu
          .menu
            %a.item{:href => "#"} Link Item
            %a.item{:href => "#"} Link Item
        %a.item{:href => "#"} Link Item
#app.ui.main.text.container
  %h1.ui.header {{title}}
  %p {{content}}
